<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MusicKiosk.ModalPage" Background="#bf5700">
    <ContentPage.Content>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="125"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="125"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="125"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="125"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="125"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Label Grid.Row="1" x:Name="labelSong" FontSize="72" TextColor="White" HorizontalOptions="Center"/>
            <Label Grid.Row="3" x:Name="labelSongMeta" FontSize="48" TextColor="White" HorizontalOptions="Center"/>
            <Grid Grid.Row="5">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="300"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="300"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="300"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Button x:Name="buttonAnnounceSong" Grid.Column="1" Text="Call Out Number" FontSize="26" BackgroundColor="#f8971f" TextColor="White" BorderWidth="3" BorderColor="#333f48" Clicked="buttonAnnounceSong_Clicked"></Button>
                <Button x:Name="buttonStart" Grid.Column="5" Text="Play" FontSize="26" BackgroundColor="#f8971f" TextColor="White" BorderWidth="3" BorderColor="#333f48" Clicked="PlayButton_Clicked"></Button>
            </Grid>
            <Grid Grid.Row="7">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="300"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="300"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="300"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Button x:Name="buttonInstructions" Grid.Column="1" Text="Instructions" FontSize="26" BackgroundColor="#f8971f" TextColor="White" BorderWidth="3" BorderColor="#333f48" Clicked="buttonInstructions_Clicked"></Button>
            </Grid>
            <Grid Grid.Row="9">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="300"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="300"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="300"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Button x:Name="buttonHereWeGo" Grid.Column="1" Text="Here We Go" FontSize="26" BackgroundColor="#f8971f" TextColor="White" BorderWidth="3" BorderColor="#333f48" Clicked="buttonHereWeGo_Clicked"></Button>
                <Button x:Name="buttonStop" Grid.Column="5" Text="Stop" FontSize="26" BackgroundColor="#f8971f" TextColor="White" BorderWidth="3" BorderColor="#333f48" IsEnabled="False" WidthRequest="100" Clicked="StopButton_Clicked"></Button>
            </Grid>
        </Grid>
    </ContentPage.Content>
</ContentPage>